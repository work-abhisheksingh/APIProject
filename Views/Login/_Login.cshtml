@model MyMvcApiProject.Models.LoginModel

@{
    ViewData["Title"] = "Login";
    Layout = "_Layout";
}

@section Login {
    <div class="container mt-5">
        <div class="card shadow p-3 mb-5 bg-white rounded">
            <div class="card-body">
                <h2 class="card-title text-center mb-4">Login</h2>

                <!-- The form for user login -->
                <form asp-controller="Login" asp-action="Authenticate" method="post">
                    <div class="form-group">
                        <label asp-for="Username" class="fw-bold">Username</label>
                        <input asp-for="Username" class="form-control" />
                        <span asp-validation-for="Username" class="text-danger"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Password" class="fw-bold">Password</label>
                        <input asp-for="Password" type="password" class="form-control" />
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>                
                    <div><button type="submit" class="btn btn-primary btn-block">Login</button></div>
                </form>
            </div>
        </div>
    </div>
    <script src="~/js/login.js"></script>
    <!-- Add a simple animation -->
    <script>
        $(document).ready(function () {
            // Add fadeInUp animation to the login card
            $(".card").addClass("animate__animated animate__fadeInUp");

            // Add additional animations to other elements if needed
            $("#Username").addClass("animate__animated animate__slideInLeft");
            $("#Password").addClass("animate__animated animate__slideInRight");
            $("button").addClass("animate__animated animate__zoomIn");
        });
    </script>
}
